# theme = catppucin-latte
# theme = rose-pine-dawn
theme = "NvimLight"
window-padding-x = 8
window-padding-y = 8
font-family = "Atkinson Hyperlegible Mono"
font-feature = -calt, -liga, -dlig
font-size = 11

font-feature = -calt
font-feature = -liga
font-feature = -dlig

# actions
keybind=alt+shift+t=new_tab

## splits
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right
keybind = alt+s>k=new_split:up
keybind = alt+s>j=new_split:down
keybind = alt+s>h=new_split:left
keybind = alt+s>l=new_split:right
keybind = alt+r>h=resize_split:left,24
keybind = alt+r>j=resize_split:down,24
keybind = alt+r>k=resize_split:up,24
keybind = alt+r>l=resize_split:right,24

## surfaces
keybind = alt+w=close_surface
keybind = alt+z=toggle_split_zoom
